  "interactions": [
    {
      "trigger": "click",
      "target": "chapter-*",
      "action": "selectChapter",
      "properties": {
        "condition": "unlocked",
        "updateState": ["currentChapter"],
        "animation": "fadeTransition"
      }
    },
    {
      "trigger": "click",
      "target": "complete-chapter-btn",
      "action": "completeChapter",
      "properties": {
        "updateState": ["completedChapters", "discoveredAchievements", "storyProgress"],
        "unlockNext": true,
        "animation": "celebrate"
      }
    },
    {
      "trigger": "hover",
      "target": "chapter-*",
      "action": "highlight",
      "properties": {
        "condition": "unlocked",
        "hoverStyle": {
          "transform": "scale(1.02)"
        },
        "transition": "smooth"
      }
    },
    {
      "trigger": "stateChange",
      "target": "progress-bar",
      "action": "updateProgress",
      "properties": {
        "watchState": "storyProgress",
        "animation": "smooth"
      }
    },
    {
      "trigger": "stateChange",
      "target": "achievement-counter",
      "action": "updateCount",
      "properties": {
        "watchState": "discoveredAchievements",
        "animation": "bounce"
      }
    }
  ],
  "animations": {
    "fadeTransition": {
      "keyframes": [
        { "opacity": 0, "y": 20 },
        { "opacity": 1, "y": 0 }
      ],
      "duration": 500,
      "easing": "ease-out"
    },
    "celebrate": {
      "keyframes": [
        { "scale": 1 },
        { "scale": 1.1, "rotate": 5 },
        { "scale": 1, "rotate": 0 }
      ],
      "duration": 600,
      "easing": "bounce"
    },
    "slideInRight": {
      "keyframes": [
        { "x": 100, "opacity": 0 },
        { "x": 0, "opacity": 1 }
      ],
      "duration": 400,
      "easing": "ease-out"
    },
    "bounce": {
      "keyframes": [
        { "scale": 1 },
        { "scale": 1.2 },
        { "scale": 1 }
      ],
      "duration": 300,
      "easing": "bounce"
    }
  },
  "gameLogic": {
    "chapters": {
      "start": {
        "nextChapters": ["youth-ministry", "education"],
        "achievements": ["First Leadership Role", "Ministry Calling Discovered"],
        "keyMetric": { "value": "2004", "label": "Ministry Journey Began" }
      },
      "youth-ministry": {
        "nextChapters": ["associate-pastor", "coaching-discovery"],
        "achievements": ["Youth Ministry Certification", "Mentorship Program Launch", "50+ Youth Discipled"],
        "keyMetric": { "value": "150%", "label": "Youth Group Growth" }
      },
      "education": {
        "nextChapters": ["associate-pastor"],
        "achievements": ["Bachelor's Degree Completed", "Biblical Languages", "Theology Mastery"],
        "keyMetric": { "value": "3.8", "label": "GPA Achievement" }
      }
    },
    "progressCalculation": "completedChapters / totalChapters * 100",
    "unlockConditions": {
      "sequential": false,
      "multiPath": true
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": 768,

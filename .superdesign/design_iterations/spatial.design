  "interactions": [
    {
      "trigger": "click",
      "target": "node-*",
      "action": "selectNode",
      "properties": {
        "updateState": ["activeNode"],
        "scaleEffect": 1.3,
        "glowEffect": true,
        "showInfoPanel": true,
        "animation": "smooth"
      }
    },
    {
      "trigger": "hover",
      "target": "node-*",
      "action": "highlightNode",
      "properties": {
        "scaleEffect": 1.1,
        "glowEffect": true,
        "showConnections": true,
        "updateState": ["hoveredNode"],
        "transition": "smooth"
      }
    },
    {
      "trigger": "scroll",
      "target": "spatial-container",
      "action": "rotateSpace",
      "properties": {
        "axis": "y",
        "sensitivity": 0.5,
        "bounds": { "min": -360, "max": 360 }
      }
    },
    {
      "trigger": "click",
      "target": "view-mode-*",
      "action": "changeViewMode",
      "properties": {
        "updateState": ["viewMode"],
        "rearrangeNodes": true,
        "animation": "transition"
      }
    },
    {
      "trigger": "mouseMove",
      "target": "spatial-container",
      "action": "updatePerspective",
      "properties": {
        "parallaxEffect": true,
        "sensitivity": 0.1
      }
    }
  ],
  "animations": {
    "floatRotate": {
      "keyframes": [
        { "rotateY": 0 },
        { "rotateY": 360 }
      ],
      "duration": 20000,
      "iterations": "infinite",
      "easing": "linear"
    },
    "breathe": {
      "keyframes": [
        { "scale": 1, "opacity": 0.8 },
        { "scale": 1.05, "opacity": 1 },
        { "scale": 1, "opacity": 0.8 }
      ],
      "duration": 4000,
      "iterations": "infinite",
      "easing": "ease-in-out"
    },
    "pulse": {
      "keyframes": [
        { "scale": 1 },
        { "scale": 1.2 },
        { "scale": 1 }
      ],
      "duration": 2000,
      "iterations": "infinite",
      "easing": "ease-in-out"
    },
    "slideIn": {
      "keyframes": [
        { "y": 100, "opacity": 0 },
        { "y": 0, "opacity": 1 }
      ],
      "duration": 600,
      "easing": "ease-out"
    },
    "glow": {
      "keyframes": [
        { "boxShadow": "0 0 20px rgba(59, 130, 246, 0.5)" },
        { "boxShadow": "0 0 40px rgba(59, 130, 246, 0.8)" },
        { "boxShadow": "0 0 20px rgba(59, 130, 246, 0.5)" }
      ],
      "duration": 2000,
      "iterations": "infinite",
      "easing": "ease-in-out"
    }
  },
  "viewModes": {
    "explore": {
      "name": "Explore View",
      "nodeArrangement": "scattered",
      "cameraPosition": { "x": 0, "y": 0, "z": 500 },
      "enableRotation": true,
      "enableZoom": true
    },
    "timeline": {
      "name": "Timeline View",
      "nodeArrangement": "linear",
      "cameraPosition": { "x": 0, "y": 0, "z": 800 },
      "enableRotation": false,
      "enableZoom": true
    },
    "network": {
      "name": "Network View",
      "nodeArrangement": "clustered",
      "cameraPosition": { "x": 0, "y": 0, "z": 600 },
      "enableRotation": true,
      "enableZoom": true,
      "highlightConnections": true
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": 768,
      "tablet": 1024
    },
    "layouts": {
      "mobile": {
        "canvas": { "width": 375, "height": 812 },
        "components": {
          "control-panel": { "width": 335, "height": 200 },
          "spatial-container": { "perspective": 800 },
          "node-*": { "width": 150, "height": 120 }
        }
      }
    }
  },
  "performance": {
    "enableHardwareAcceleration": true,
    "optimizeFor3D": true,
    "reducedMotion": {
      "respectPreference": true,
      "fallbackAnimations": "fade"
    },
    "lazyLoading": true,
    "memoryOptimization": true
  }
